<local:ZMDialog x:Class="InventoryManager.Views.AddProductsDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventoryManager.Views.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
                DialogHeight="260" DialogWidth="350"
      Title="Add Products">

    <Grid>
        <StackPanel Margin="{StaticResource SmallLeftTopRightBottomMargin}">
            <TextBlock Text="Name" Margin="0,3"/>
            <TextBox x:Name="ProductName"/>
            <TextBlock Text="Code" Margin="0,3"/>
            <TextBox x:Name="ProductCode"/>
            <TextBlock Text="Price" Margin="0,3"/>
            <TextBox x:Name="ProductPrice"/>
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Margin="0,0,2,0" Style="{StaticResource PrimaryButton}" Content="Save"/>
                <Button Grid.Column="1" Style="{StaticResource SecondaryButton}" Content="Cancel" Margin="2,0,0,0"/>
            </Grid>
        </StackPanel>
    </Grid>
</local:ZMDialog>
