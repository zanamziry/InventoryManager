<Page
    x:Class="InventoryManager.Views.InventoryPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:InventoryManager.Properties"
    mc:Ignorable="d"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.InventoryPageTitle}" />
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <!--
            The Mahapps Gray10 color represents where you should place your content.
            Place your content here.
            -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="{StaticResource SmallLeftTopRightBottomMargin}">
                    <TextBlock Text="Inventory" Margin="0,3"/>
                    <TextBox x:Name="InventoryAmount"/>
                    <TextBlock Text="Open" Margin="0,3"/>
                    <TextBox x:Name="OpenAmount"/>
                    <TextBlock Text="ExpireDate" Margin="0,3"/>
                    <DatePicker x:Name="ProductExpire"/>
                    <Button Content="Add" VerticalAlignment="Stretch" Padding="20,0" Style="{StaticResource MahApps.Styles.Button}" Margin="{StaticResource SmallTopMargin}" BorderThickness="1" Click="OnAddButtonClicked"/>
                    <Button Content="Remove" VerticalAlignment="Stretch" Padding="20,0" Style="{StaticResource MahApps.Styles.Button}" Margin="{StaticResource SmallTopMargin}" BorderThickness="1" Background="LightPink" Click="OnRemoveButtonClicked"/>
                </StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" x:Name="GridOfInventory" ItemsSource="{Binding InventoryList}" AutoGenerateColumns="False" BorderThickness="1" BorderBrush="{StaticResource MahApps.Brushes.Button.Border}" IsReadOnly="False" KeyUp="OnKeyUp">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="150"/>
                        <DataGridTextColumn Header="Inventory" Binding="{Binding Inventory}" Width="150"/>
                        <DataGridTextColumn Header="Opened" Binding="{Binding Open}"/>
                        <DataGridTextColumn Header="Expire Date" Binding="{Binding ExpireDate, StringFormat='{}{0:dd/M/yyyy}'}" />
                    </DataGrid.Columns>
                </DataGrid>
                    <DockPanel Grid.Row="1" Margin="0,10">
                        <DockPanel Width="80" >
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" HorizontalAlignment="Stretch" TextAlignment="Center" DockPanel.Dock="Top" Text="System"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding SysValue,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel Width="80" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" HorizontalAlignment="Stretch" TextAlignment="Center" DockPanel.Dock="Top" Text="Outside"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding Outside,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel Width="80" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" HorizontalAlignment="Stretch" TextAlignment="Center" DockPanel.Dock="Top" Text="Given Away"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding GiveAway,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel  Width="80" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" HorizontalAlignment="Stretch" TextAlignment="Center" DockPanel.Dock="Top" Text="Real"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding Real,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel HorizontalAlignment="Stretch" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" HorizontalAlignment="Stretch" TextAlignment="Center" DockPanel.Dock="Top" Text="Result"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding Result,Mode=OneWay}"/>
                        </DockPanel>
                    </DockPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
