<Page
    x:Class="InventoryManager.Views.InventoryPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:InventoryManager.Views.Controls"
    xmlns:converters="clr-namespace:InventoryManager.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mt="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:properties="clr-namespace:InventoryManager.Properties"
    mc:Ignorable="d"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>
    <Page.InputBindings>
        <KeyBinding Key="Right" Command="{Binding GotoNext}"/>
        <KeyBinding Key="Left" Command="{Binding GotoPrevious}"/>
    </Page.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.InventoryPageTitle}" />
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <!--
            The Mahapps Gray10 color represents where you should place your content.
            Place your content here.
            -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="{StaticResource SmallLeftTopRightBottomMargin}">
                    <TextBlock Text="{Binding SelectedProduct.Product.Name}" TextWrapping="Wrap" FontSize="14" Style="{StaticResource SubtitleTextStyle}" Margin="0,3"/>
                    <TextBlock Text="{Binding SelectedProduct.Product.ID}" FontSize="14" Style="{StaticResource SubtitleTextStyle}" Margin="0,3"/>
                    <ToggleButton x:Name="ToggleAdd" Content="Add" VerticalAlignment="Stretch" Padding="20,0" Margin="{StaticResource SmallTopMargin}" BorderThickness="1" Background="{StaticResource MahApps.Brushes.Badged.Foreground}"/>
                    <ToggleButton x:Name="ToggleSend" VerticalAlignment="Stretch" Padding="20,0" Margin="{StaticResource SmallTopMargin}" BorderThickness="1" Background="{StaticResource MahApps.Brushes.Badged.Foreground}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <mt:PackIcon Kind="SendOutline" Width="20"/>
                            <TextBlock Grid.Column="1" TextAlignment="Center" HorizontalAlignment="Stretch" Text="Give Away"/>
                        </Grid>
                    </ToggleButton>
                    <ToggleButton x:Name="ToggleGift" VerticalAlignment="Stretch" Padding="20,0" Margin="{StaticResource SmallTopMargin}" BorderThickness="1" Background="{StaticResource MahApps.Brushes.Badged.Foreground}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <mt:PackIcon Kind="GiftOutline" Width="20"/>
                            <TextBlock Grid.Column="1" TextAlignment="Center" HorizontalAlignment="Stretch" Text="Give Away"/>
                        </Grid>
                    </ToggleButton>
                    <Button VerticalAlignment="Stretch" Padding="20,0" Margin="{StaticResource SmallTopMargin}" BorderThickness="1" Background="LightPink" Click="OnRemoveButtonClicked">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <mt:PackIcon Kind="Remove" Width="20"/>
                            <TextBlock Grid.Column="1" TextAlignment="Center" HorizontalAlignment="Stretch" Text="Remove"/>
                        </Grid>
                    </Button>
                    <Grid HorizontalAlignment="Stretch" Margin="{StaticResource SmallTopMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="0,0,2,0" BorderThickness="1"  Command="{Binding GotoPrevious}" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <mt:PackIcon Kind="NavigateBefore" Width="20"/>
                                <TextBlock  Grid.Column="1" TextAlignment="Center" HorizontalAlignment="Stretch" Text="Previous"/>
                            </Grid>
                        </Button>
                        <Button Grid.Column="1" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="2,0,0,0" BorderThickness="1" Command="{Binding GotoNext}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock TextAlignment="Center" HorizontalAlignment="Stretch" Text="Next"/>
                                <mt:PackIcon Grid.Column="1" Kind="NavigateNext" Width="20"/>
                            </Grid>
                        </Button>
                    </Grid>
                </StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="GridOfInventory" CellEditEnding="OnCellEdited" KeyUp="OnKeyUp" CanUserDeleteRows="False" CanUserAddRows="False" ItemsSource="{Binding SelectedProduct.Locals}" AutoGenerateColumns="False" BorderThickness="1" BorderBrush="{StaticResource MahApps.Brushes.Button.Border}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Inventory" Binding="{Binding Inventory}" Width="100"/>
                            <DataGridTextColumn Header="Open" Binding="{Binding Open}" Width="100"/>
                            <DataGridTextColumn Header="Total" IsReadOnly="True" Binding="{Binding Total}" Width="100"/>
                            <DataGridTextColumn Header="Expire Date" Binding="{Binding ExpireDate, StringFormat='{}{0:M/yyyy}'}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="1" Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel Grid.Column="0" >
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" TextAlignment="Center" DockPanel.Dock="Top" Text="System"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding SelectedProduct.System.CloseBalance,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel Grid.Column="1" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" TextAlignment="Center" DockPanel.Dock="Top" Text="Outside"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding SelectedProduct.TotalOutside,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel Grid.Column="2" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" TextAlignment="Center" DockPanel.Dock="Top" Text="GiveAway"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding SelectedProduct.TotalGivenAway,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel Grid.Column="3" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" TextAlignment="Center" DockPanel.Dock="Top" Text="Real"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding SelectedProduct.TotalReal,Mode=OneWay}"/>
                        </DockPanel>
                        <DockPanel Grid.Column="4" Margin="{StaticResource SmallLeftMargin}">
                            <TextBlock Background="{DynamicResource MahApps.Brushes.Gray9}" Padding="2" TextAlignment="Center" DockPanel.Dock="Top" Text="Result"/>
                            <TextBox TextAlignment="Center" IsReadOnly="True" Text="{Binding SelectedProduct.Result,Mode=OneWay}"/>
                        </DockPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <!--#region Add-->
        <local:ZMDialog Visibility="{Binding ElementName=ToggleAdd,Path=IsChecked,Converter={StaticResource BooleanToVisibilityConverter},Mode=TwoWay}" Grid.RowSpan="2" DialogHeight="270" DialogWidth="270" Title="Add Batch">
            <StackPanel Margin="{StaticResource SmallLeftTopRightBottomMargin}">
                <TextBlock Text="Inventory" Margin="0,3"/>
                <TextBox x:Name="InventoryAmount"/>
                <TextBlock Text="Open" Margin="0,3"/>
                <TextBox x:Name="OpenAmount"/>
                <TextBlock Text="ExpireDate" Margin="0,3"/>
                <DatePicker x:Name="ProductExpire" SelectedDateFormat="Short" />
                <Grid Margin="{StaticResource SmallTopBottomMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Add" Padding="20,0" Margin="0 0 2 0" BorderThickness="1" Click="OnAddButtonClicked"/>
                    <Button Content="Cancel" Grid.Column="1" Padding="20,0" Margin="2 0 0 0" BorderThickness="1" Click="OnCancelAddClicked"/>
                </Grid>
            </StackPanel>
        </local:ZMDialog>
        <!--#endregion-->
        <!--#region Send-->
        <local:ZMDialog Visibility="{Binding ElementName=ToggleSend,Path=IsChecked,Converter={StaticResource BooleanToVisibilityConverter},Mode=TwoWay}" Grid.RowSpan="2" DialogHeight="270" DialogWidth="270" Title="Send Product">
            <StackPanel Margin="{StaticResource SmallLeftTopRightBottomMargin}">
                <TextBlock Text="BatchID" Margin="0,3"/>
                <TextBlock x:Name="BatchIDToSend"/>
                <TextBlock Text="Amount" Margin="0,3"/>
                <TextBox x:Name="AmountToSend"/>
                <TextBlock Text="Location" Margin="0,3"/>
                <CheckBox x:Name="PlaceToSend"/>
                <Grid Margin="{StaticResource SmallTopBottomMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Send" Padding="20,0" Margin="0 0 2 0" BorderThickness="1" Click="OnSendClicked"/>
                    <Button Content="Cancel" Grid.Column="1" Padding="20,0" Margin="2 0 0 0" BorderThickness="1" Click="OnCancelSendClicked"/>
                </Grid>
            </StackPanel>
        </local:ZMDialog>
        <!--#endregion-->
        <!--#region GiveAway-->
        <local:ZMDialog Visibility="{Binding ElementName=ToggleGift,Path=IsChecked,Converter={StaticResource BooleanToVisibilityConverter},Mode=TwoWay}" Grid.RowSpan="2" DialogHeight="270" DialogWidth="270" Title="GiveAway Product">
            <StackPanel Margin="{StaticResource SmallLeftTopRightBottomMargin}">
                <TextBlock Text="BatchID" Margin="0,3"/>
                <TextBlock x:Name="BatchIDToGive"/>
                <TextBlock Text="Amount" Margin="0,3"/>
                <TextBox x:Name="AmountToGive" Text="1"/>
                <TextBlock Text="GiveAway Name" Margin="0,3"/>
                <ComboBox x:Name="GiveAwayName"/>
                <Grid Margin="{StaticResource SmallTopBottomMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Gift" Padding="20,0" Margin="0 0 2 0" BorderThickness="1" Click="OnGiveAwayClicked"/>
                    <Button Content="Cancel" Grid.Column="1" Padding="20,0" Margin="2 0 0 0" BorderThickness="1" Click="OnCancelGiveawayClicked"/>
                </Grid>
            </StackPanel>
        </local:ZMDialog>
        <!--#endregion-->
    </Grid>
</Page>
